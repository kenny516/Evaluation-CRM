@model List<EvaluationCrm.Models.entity.Expense>
@{
    ViewData["Title"] = "Dépenses";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="display-4">Dépenses</h2>
        @* <button class="btn btn-primary"> *@
        @*     <i class="bi bi-plus-lg"></i> Nouvelle dépense *@
        @* </button> *@
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Description</th>
                        <th>Montant</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var expense in Model)
                        {
                            <tr>
                                <td>@expense.ExpenseId</td>
                                <td class="fw-bold">@expense.Description</td>
                                <td class="text-primary fw-bold">@expense.Amount.ToString("C")</td>
                                <td>@expense.DateExpense.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4">
                                <i class="bi bi-cash text-muted fs-3 mb-3 d-block"></i>
                                <p class="text-muted mb-0">Aucune dépense trouvée</p>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>