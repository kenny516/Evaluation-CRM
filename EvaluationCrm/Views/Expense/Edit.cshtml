@using Microsoft.AspNetCore.Mvc.TagHelpers
@model EvaluationCrm.Controllers.EditExpenseViewModel
@{
    ViewData["Title"] = "Modifier la dépense";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title mb-4">Modifier la dépense</h1>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Expense.ExpenseId"/>
                        <input type="hidden" asp-for="TicketId"/>
                        <input type="hidden" asp-for="LeadId"/>
                        <input type="hidden" asp-for="Expense.Customer.CustomerId"/>
                        @if (Model.Expense.Budget != null)
                        {
                            <input type="hidden" asp-for="Expense.Budget.BudgetId"/>
                        }
                        <div class="mb-3">
                            <label asp-for="Expense.Description" class="form-label">Description</label>
                            <input asp-for="Expense.Description" class="form-control" required/>
                            <span asp-validation-for="Expense.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Expense.Amount" class="form-label">Amount</label>
                            <div class="input-group">
                                <input asp-for="Expense.Amount" type="number" step="0.01" class="form-control"
                                       required/>
                                <span class="input-group-text">€</span>
                            </div>
                            <span asp-validation-for="Expense.Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Expense.DateExpense" class="form-label">Date</label>
                            <input asp-for="Expense.DateExpense" type="date" class="form-control" required/>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="javascript:history.back()" class="btn btn-secondary">Retour</a>
                            <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}