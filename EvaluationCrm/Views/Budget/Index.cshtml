@model List<EvaluationCrm.Models.entity.Budget>
@{
    ViewData["Title"] = "Liste des Budgets";
}

<div class="container-fluid py-4">
    <h2 class="display-4 mb-4">@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Montant</th>
                            <th>Client</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var budget in Model)
                            {
                                <tr>
                                    <td><span class="fw-bold">@budget.Title</span></td>
                                    <td class="fw-bold text-primary">@budget.Amount.ToString("C")</td>
                                    <td>@budget.Customer.Name</td>
                                    <td>@budget.StartDate.ToString("dd/MM/yyyy")</td>
                                    <td>@budget.EndDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <i class="bi bi-exclamation-circle text-muted fs-3 mb-3 d-block"></i>
                                    <p class="text-muted mb-0">Aucun budget trouv√©</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>