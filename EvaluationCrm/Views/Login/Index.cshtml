@{
    ViewData["Title"] = "Connexion";
    Layout = "_LayoutLogin";
}

<div class="login-container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-12 col-md-8 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="logo-circle mb-3">
                        <i class="bi bi-shield-lock fs-1"></i>
                    </div>
                    <h2 class="fw-bold mb-3 text-primary">Bienvenue</h2>
                    <p class="text-muted">Connectez-vous pour accéder à votre espace</p>
                </div>
                <form asp-controller="Login" asp-action="Login" method="post" class="login-form">
                    <div class="mb-4 input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-envelope-fill text-primary"></i>
                        </span>
                        <input type="email" class="form-control form-control-lg border-start-0 ps-0" 
                            id="email" name="email" placeholder="Votre adresse email" required>
                    </div>
                    <div class="mb-4 input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-key-fill text-primary"></i>
                        </span>
                        <input type="password" class="form-control form-control-lg border-start-0 ps-0" 
                            id="password" name="password" placeholder="Votre mot de passe" required>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold login-btn">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .logo-circle {
            width: 80px;
            height: 80px;
            background-color: rgba(13, 110, 253, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            color: #0d6efd;
        }
        .input-group-text {
            border-radius: 0.5rem 0 0 0.5rem;
        }
        .form-control {
            border-radius: 0 0.5rem 0.5rem 0;
        }
        .form-control:focus {
            box-shadow: none;
            border-color: #0d6efd;
        }
        .login-btn {
            transition: all 0.3s ease;
            height: 50px;
        }
        .login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
        }
        .login-form {
            margin-top: 1rem;
        }
    </style>
}